#!/bin/sh

set -e -x

export TXENG_ROOT=/var/lib/10xeng
export DEBIAN_FRONTEND=noninteractive

# 10xeng root
mkdir -p ${TXENG_ROOT}

# get hostnode distribution
cd /tmp
wget -O hostnode-dist.tar.gz "<%= download_url %>"
tar xfz hostnode-dist.tar.gz -C $TXENG_ROOT

cd $TXENG_ROOT
if [ -x boostrap.sh ]; then
  ./bootstrap.sh
fi


